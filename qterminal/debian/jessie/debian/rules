#!/usr/bin/make -f
#export DH_VERBOSE=1

%:
	dh  $@

configure_flags += \
			-DUSE_QT5=ON \
			-DUSE_QT4=OFF \
			-DUSE_SYSTEM_QXT=OFF \
			-DCMAKE_INSTALL_PREFIX="/usr"

override_dh_auto_configure:
	dh_auto_configure -- 	$(configure_flags)

override_dh_install:
	dh_install --fail-missing

override_dh_strip:
	dh_strip --dbg-package=qterminal-dbg
