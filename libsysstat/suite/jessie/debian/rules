#!/usr/bin/make -f
#export DH_VERBOSE=1

DEB_HOST_MULTIARCH ?= $(shell dpkg-architecture -qDEB_HOST_MULTIARCH)


%:
	dh ${@} --buildsystem cmake --parallel


override_dh_install:
	dh_install --list-missing --fail-missing

override_dh_auto_configure:
	dh_auto_configure -- -DLIB_SUFFIX="/$(DEB_HOST_MULTIARCH)"

override_dh_strip:
	dh_strip --dbg-package=libsysstat-qt5-0-dbg


maintainer-clean:
	$(RM) -r checkout
	$(RM) -r backport
	$(RM) *.build
	$(RM) *.changes
	$(RM) *.deb
	$(RM) *.dsc
	$(RM) *.tar.gz
	$(RM) *.upload

checkout: maintainer-clean
	git clone --depth=1 git://github.com/lxde/libsysstat.git checkout; \
	cd checkout; \
	cp -a ../debian .; \
	echo "";\
	git log | head; \
	echo ""; \

backport: checkout
	mv checkout backport

symbols:
	find . -name symbols | xargs sed 's/ \(_.*\) \(.*\)/ (c++)"\1" \2/' | c++filt | uniq > debian/mangled
