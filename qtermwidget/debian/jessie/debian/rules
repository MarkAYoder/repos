#!/usr/bin/make -f
#export DH_VERBOSE=1

%:
	dh  $@

configure_flags_qt5 += \
			-DCMAKE_INSTALL_PREFIX="/usr" \
			-DUSE_QT5=ON \
			-DUSE_QT4=OFF \
			-DBUILD_DESIGNER_PLUGIN=0

configure_flags_qt4 += \
			-DCMAKE_INSTALL_PREFIX="/usr" \
			-DUSE_QT4=ON \
			-DUSE_QT5=OFF


override_dh_auto_configure:
	dh_auto_configure -- 	$(configure_flags_qt4)

override_dh_auto_build:
	dh_auto_build

override_dh_auto_install:
	dh_auto_install

	dh_auto_configure -- 	$(configure_flags_qt5)
	dh_auto_build
	dh_auto_install
